<div class="container"><br>
	<div class="row">
		<div class="col-md-8 offset-md-2">
			<div class="card text-white bg-info">
				<h3 class="card-header text-center">Log in</h3>
				<div class="container"><br>
					<%= form_for(:sessions, html: {class: "col-md-12" }) do |f| %>

						<div class="form-group">
							<%= f.label :email %>
							<%= f.email_field :email, placeholder: "Email Address", class:"form-control" %>
						</div>

						<div class="form-group">
							<%= f.label :password %>
							<%= f.password_field :password, placeholder: "Enter Password", class:"form-control" %>
						</div>

						<div class="form-group text-center">
						 <%= f.button '<i class="fas fa-paper-plane"></i> Log In'.html_safe,  class: 'btn btn-outline-light btn-small' %>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>
