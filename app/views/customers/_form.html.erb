<%= render 'layouts/errors', obj: @customer %>
<div class="col-8 offset-2">
  <div class="card">
    <div class="card-header text-center">
      <h3><%= @customer.new_record? ? "Add customer" : "Edit customer" %></h3>
    </div>
    <div class="card-body">
      <%= form_with(model: customer, local: true) do |form| %>

        <div class="form-group">
          <%= form.label :name %>
          <%= form.text_field :name, class:"form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :email %>
          <%= form.text_field :email, class:"form-control" %>
        </div>
      </div>  
        <div class="card-footer">
          <div class="row justify-content-center">
            <%= form.button(@customer.new_record? ? 'Create Customer <i class="fas fa-paper-plane"></i>'.html_safe : 'Update Customer <i class="fas fa-paper-plane"></i>'.html_safe, class: 'btn btn-success btn-sm') %>
          </div>
        </div>
        <% end %>

  </div>
</div>
