<div class="row">
  <div class="col-6">
    <div class="card">
      <div class="card-header text-center">
        <h3><%= @customer.name %></h3>
      </div>
      <div class="card-body">
        <p class="text-center">
          <strong>Email:</strong>
          <%= @customer.email%>
        </p>

      </div>
      <div class="card-footer">
        <%= link_to 'Back', customers_path, class:"btn btn-outline-secondary" %>
        <%= link_to 'Edit', edit_customer_path(@customer), class:"btn btn-outline-warning float-right" %>
      </div>
    </div>
  </div>
  <div class="col-6">
    <div class="card">
      <div class="card-header text-center">
        <h3>Invoices</h3>
      </div>
      <div class="card-body">
        <ul class="list-group">
          <% @customer.invoices.each do |invoice| %>
           <li class="list-group-item text-center">
             <b>No.</b> <%= invoice.num %> -
             <b>Date:</b> <%= invoice.date %> <br> <b>Amount:</b> <%= invoice.amount %> <br>
              <%= link_to 'View <i class="fas fa-eye"></i>'.html_safe, invoice, class: "btn btn-outline-success btn-sm" %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
