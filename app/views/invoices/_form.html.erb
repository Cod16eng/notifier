<%= render 'layouts/errors', obj: @invoice %>
<div class="col-8 offset-2">
  <div class="card">
    <div class="card-header text-center">
      <h3><%= @invoice.new_record? ? "Add invoice" : "Edit invoice" %></h3>
    </div>
    <div class="card-body">
      <%= form_with(model: invoice, local: true) do |form| %>

        <div class="form-group">
          <%= form.label :name %>
          <%= form.text_field :name, class:"form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :num %>
          <%= form.text_field :num, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :customer %>
          <%= form.collection_select( :customer_id, Customer.all, :id, :name, {:prompt => "Please Select"}, {:class => 'form-control'}) %>
        </div>
        <div class="form-inline">
          <%= form.label :date %>
          <%= form.date_select :date, {}, class:"form-control mx-auto" %>
        </div>

        <div class="form-group">
          <%= form.label :amount %>
          <%= form.text_field :amount, class:"form-control" %>
        </div>
     </div>
      <div class="card-footer  text-center">
          <%= form.button(@invoice.new_record? ? 'Create Invoice <i class="fas fa-paper-plane"></i>'.html_safe : 'Update invoice <i class="fas fa-paper-plane"></i>'.html_safe, class: 'btn btn-success btn-sm') %>        
      </div>
      <% end %>
  </div>
</div>
