<p id="notice"><%= notice %></p>

<%= form_tag import_invoices_path, multipart: true do %>  
  <%= file_field_tag :file %>
  <%= submit_tag "Import invoices" %>
<% end %>

<h1>Invoices</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Num</th>
      <th>Date</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.name %></td>
        <td><%= invoice.num %></td>
        <td><%= invoice.date %></td>
        <td><%= invoice.amount %></td>
        <td><%= link_to 'Show', invoice %></td>
        <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
        <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Invoice', new_invoice_path %>
