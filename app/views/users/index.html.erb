<div class="clear-fix"><br></div>
<h4 class="text-center">Users<%= link_to 'New User', new_user_path,
  class:"btn btn-outline-success float-right btn-sm" %></h4>

<div class="clear-fix"><br></div>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th colspan="2" >Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= link_to '<i class="fas fa-eye"></i>'.html_safe, user, class: "text-success" %></td>
        <td><%= link_to '<i class="fas fa-times"></i>'.html_safe, user,
          method: :delete, data: { confirm: 'Are you sure?' }, class: "text-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= will_paginate(@users, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer, class: 'justify-content-center d-flex') %>
