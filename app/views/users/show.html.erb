<div class="col-8 offset-2">
  <div class="card">
    <div class="card-header text-center">
      <h3><%= @user.username %></h3>
    </div>
    <div class="card-body">
      <p class="text-center">
          <strong>Email:</strong>
          <%= @user.email %>
        </p>
    </div>
    <div class="card-footer">
      <%= link_to 'Back', users_path, class:"btn btn-outline-secondary" %>
      <%= link_to 'Edit', edit_user_path(@user), class:"btn btn-outline-warning float-right" %>
    </div>
  </div>
</div>
